<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MovieMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <!-- First column will take up half the screen -->
            <div class="col-md-6">
                @RenderBody()
            </div>

            <!-- Second column will also take up half the screen -->
            <div class="col-md-6 d-flex flex-column">
                <!-- First row "Search" -->
                <div class="d-flex flex-column align-items-center justify-content-center h-25 mb-5 mt-5">
                    <h2>Search</h2>
                    <div>
                        <div class="form-group">
                        <form method="get">
                            <!-- Text input for title search -->
                            <input type="text" value="@ViewData["CurrentFilter"]" name="SearchString" placeholder="Search Movies" />
                            <input type="submit" value="Search" class="btn btn-danger" />
                            <!-- Dropdown for genre filter -->
                           @*  <select name="Category">
                                <option value="">All Categories</option>
                                <option value="Drama">Drama</option>
                                <option value="Action">Action</option>
                                <option value="Family">Family</option>
                                <option value="Comedy">Comedy</option>
                                <option value="Animation">Animation</option>
                                <option value="Crime">Crime</option>
                                <option value="Fantasy">Fantasy</option>
                                <option value="Historical">Historical</option>
                                <option value="Horror">Horror</option>
                                <option value="Romance">Romance</option>
                            </select> *@   
                        </form>
                        </div>
                    </div>
                </div>

                <!-- Second row with title "Add/edit" -->
                <div class="d-flex flex-column align-items-center justify-content-center">
                    <h2>Add/Edit</h2>
                    <div class="btn-group mt-2" role="group">
                        <a href="@Url.Action("Create", "Posts")" type="button" class="btn btn-primary">Add</a>
                        <button type="button" class="btn btn-warning">Edit</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div> <!-- Closing tag for the second column -->
        </div> <!-- Closing tag for the row -->
    </div> <!-- Closing tag for the container-fluid -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
